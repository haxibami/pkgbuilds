  "http::/usr/bin/curl -A Mozilla -H Referer:https://www.apple.com/wss -fLC - --retry 3 --retry-delay 3 -o %o %u"
  "https::/usr/bin/curl -A Mozilla -H Referer:https://www.apple.com/wss -fLC - --retry 3 --retry-delay 3 -o %o %u"
